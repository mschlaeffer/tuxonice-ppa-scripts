#!/bin/bash

TOI=$1

for RELEASE in wily vivid trusty precise; do
  echo "checking updates for UBUNTU $RELEASE:"
  ubuntu-current $RELEASE
  echo
  ppa-rebuild-linux $RELEASE ppa:tuxonice/daily $TOI
  ppa-rebuild-linux-meta $RELEASE ppa:tuxonice/daily
  if [ "$RELEASE" == "precise" ]; then
    ppa-rebuild-linux-lbm $RELEASE ppa:tuxonice/daily
  fi
  echo
  echo
done

