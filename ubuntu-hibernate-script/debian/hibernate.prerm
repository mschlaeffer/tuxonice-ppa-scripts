if [ "${1:-}" = remove ]; then
  rmdir --ignore-fail-on-non-empty --parents \
    /usr/local/share/hibernate/scriptlets.d 2>/dev/null || :
fi

# See #369953
set +u
#DEBHELPER#
set -u
