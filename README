
# SETUP:

# clone ubuntu kernel git trees:
git clone git://kernel.ubuntu.com/ubuntu/ubuntu-lucid.git
git clone git://kernel.ubuntu.com/ubuntu/ubuntu-lucid-lbm.git
git clone git://kernel.ubuntu.com/ubuntu/ubuntu-lucid-meta.git

# get original kernel source to reduce upload size
wget https://launchpad.net/ubuntu/lucid/+source/linux/2.6.32-21.32/+files/linux_2.6.32.orig.tar.gz

# clone tuxonice-userui and hibernate trees:
git clone git://git.tuxonice.net/tuxonice-userui.git
git clone git://git.tuxonice.net/hibernate-script.git

# extract scripts in current directory
#tar xvfz tuxonice-ppa.tgz

# get bzr branch of tuxoniceppa
bzr branch lp:~mschlaeffer/+junk/tuxoniceppa tuxoniceppa

# add scripts to your $PATH
export PATH=$PATH:`pwd`/tuxoniceppa/scripts

# * resulting directories:
# ubuntu-lucid
# ubuntu-lucid-lbm
# ubuntu-lucid-meta
# tuxonice-userui
# hibernate-script
# tuxoniceppa


# EXAMPLES:

# rebuild all packages with newer versions available
ppa-rebuild

# show current ubuntu versions:
ubuntu-current lucid

# show current tuxonice version:
tuxonice-version lucid

# get latest tuxonice patch:
tuxonice-git-patch 3.2-rc2 lucid

# build linux-image:
ppa-linux-tuxonice lucid 22 36 1 3.2-rc2 ppa:tuxonice/tuxonice-testing

# build linux-lbm:
ppa-linux-lbm-tuxonice lucid 22 13 1 ppa:tuxonice/tuxonice-testing

# build linux-meta:
ppa-linux-meta-tuxonice lucid 22 23 1 ppa:tuxonice/tuxonice-testing

# build tuxonice-userui:
ppa-tuxonice-userui lucid 1.0 .git20100407 6 1 ppa:tuxonice/tuxonice-testing

# build hibernate:
ppa-hibernate lucid 2.0 .git20100603 5 1 ppa:tuxonice/tuxonice-testing

